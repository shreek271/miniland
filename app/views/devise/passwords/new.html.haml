.row.green-form-page
  .col-md-12
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .col-md-4.col-md-offset-4.init-form
        .init-form-header.text-center
          %h3 Forgot your password?
        = devise_error_messages!
        .form-group
        = f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email"
        %br/
        .form-group
          = f.submit "Send reset password instructions", class: "form-control btn btn-success"
        = render "devise/shared/links"
