- provide(:title, "#{@faculty.name}")
.row.green-form-page
  .col-md-8.element-box
    .col-md-6
      %h3{style: "margin-top: 0px;"}=@faculty.name.capitalize
      %b Gender: 
      = @faculty.gender
      %br
      %b Subjects:
      = @faculty.subject
      %br
      %b Qualification:
      = @faculty.qualification
      %br
      %b Experience:
      = @faculty.experience
      %br
      %b Contact:
      = @faculty.phone
      %br
      %b Email:
      = @faculty.email
      %br
      %b Address:
      = @faculty.address
    .col-md-4
      = image_tag(@faculty.picture.url, class: "img-responsive event-pictures")